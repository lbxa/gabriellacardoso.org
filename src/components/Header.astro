---
import { Icon } from "astro-icon/components";
import Nav from "./Nav.astro";
---

<div>
  <header
    class="flex items-center justify-between px-lg md:px-xl lg:px-2xl py-md md:py-lg"
  >
    <!-- phatom div-->
    <div class="size-8 sm:hidden"></div>
    <h1 class="text-5xl text-center flex-1 text-theme">
      <span class="sm:hidden">G&C</span>
      <span class="hidden sm:inline">Gabriella Cardoso</span>
    </h1>
    <label for="menu-toggle" class="cursor-pointer sm:hidden">
      <Icon name="menu" class="size-8" />
      <span class="sr-only">Menu</span>
    </label>
  </header>
  <input type="checkbox" id="menu-toggle" class="peer hidden" />
  <div class="hidden peer-checked:block sm:block">
    <Nav />
  </div>
</div>
