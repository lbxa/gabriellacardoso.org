---
import NavItem from "./NavItem.astro";

const navItems = [
  { href: "#about", label: "About" },
  { href: "#education", label: "Education" },
  { href: "#experience", label: "Experience" },
  { href: "#writing", label: "Writing" },
  { href: "#skills", label: "Skills" },
  { href: "#contact", label: "Contact" },
];
---

<nav class="bg-white dark:bg-theme z-50 border-b py-sm">
  <ul
    class="flex flex-col md:flex-row justify-center items-center gap-sm md:gap-md list-none m-0 p-0"
  >
    {navItems.map((item) => <NavItem href={item.href} label={item.label} />)}
  </ul>
</nav>
